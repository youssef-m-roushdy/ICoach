<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - iCoach</title>
    <style>
        :root {
            --primary: #4CAF50;
            --background: #121212;
            --surface: #1e1e1e;
            --text: #ffffff;
            --error: #f44336;
            --success: #4CAF50;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: var(--background);
            color: var(--text);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .container {
            background: var(--surface);
            border-radius: 12px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }
        
        .logo {
            text-align: center;
            margin-bottom: 30px;
            color: var(--primary);
            font-size: 28px;
            font-weight: bold;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 10px;
            color: var(--text);
        }
        
        .subtitle {
            text-align: center;
            color: #888;
            margin-bottom: 30px;
            font-size: 14px;
        }
        
        .error-message {
            background: rgba(244, 67, 54, 0.1);
            border: 1px solid var(--error);
            color: var(--error);
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .success-message {
            background: rgba(76, 175, 80, 0.1);
            border: 1px solid var(--success);
            color: var(--success);
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            font-size: 14px;
        }
        
        input {
            width: 100%;
            padding: 14px;
            background: rgba(255,255,255,0.05);
            border: 1px solid #333;
            border-radius: 8px;
            color: var(--text);
            font-size: 16px;
            transition: border 0.3s;
        }
        
        input:focus {
            outline: none;
            border-color: var(--primary);
        }
        
        .password-strength {
            margin-top: 8px;
            font-size: 12px;
            color: #888;
        }
        
        .requirements {
            margin-top: 20px;
            padding: 15px;
            background: rgba(255,255,255,0.05);
            border-radius: 8px;
            font-size: 13px;
        }
        
        .requirement {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
            color: #888;
        }
        
        .requirement.valid {
            color: var(--success);
        }
        
        button {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.3s;
            margin-top: 20px;
        }
        
        button:hover {
            opacity: 0.9;
        }
        
        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .back-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }
        
        .back-link a {
            color: var(--primary);
            text-decoration: none;
        }
        
        .back-link a:hover {
            text-decoration: underline;
        }
        
        .token-info {
            font-size: 11px;
            color: #666;
            margin-top: 20px;
            padding: 10px;
            background: rgba(255,255,255,0.02);
            border-radius: 4px;
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">iCoach</div>
        
        <h1>Reset Password</h1>
        <p class="subtitle">Create a new secure password for your account</p>
        
        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        
        <% if (message) { %>
            <div class="success-message"><%= message %></div>
        <% } %>
        
        <form id="resetForm" method="POST" action="/reset-password/<%= token %>">
            <!-- CSRF token for security -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input 
                    type="password" 
                    id="newPassword" 
                    name="newPassword" 
                    placeholder="Enter new password" 
                    required
                    minlength="8"
                >
                <div id="passwordStrength" class="password-strength"></div>
            </div>
            
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    placeholder="Confirm new password" 
                    required
                >
                <div id="passwordMatch" class="password-strength"></div>
            </div>
            
            <div class="requirements">
                <div class="requirement" id="reqLength">✓ At least 8 characters</div>
                <div class="requirement" id="reqUppercase">✓ One uppercase letter</div>
                <div class="requirement" id="reqLowercase">✓ One lowercase letter</div>
                <div class="requirement" id="reqNumber">✓ One number</div>
            </div>
            
            <button type="submit" id="submitBtn" disabled>Reset Password</button>
            
            <div class="back-link">
                <a href="https://yourapp.com/login">Back to Sign In</a>
            </div>
            
            <!-- Debug: Show token (remove in production) -->
            <% if (process.env.NODE_ENV === 'development') { %>
                <div class="token-info">
                    Token: <%= token.substring(0, 20) %>...
                </div>
            <% } %>
        </form>
    </div>
    
    <script>
        // Password validation logic
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');
        const requirements = {
            length: document.getElementById('reqLength'),
            uppercase: document.getElementById('reqUppercase'),
            lowercase: document.getElementById('reqLowercase'),
            number: document.getElementById('reqNumber')
        };
        
        function validatePassword(password) {
            const hasMinLength = password.length >= 8;
            const hasUpperCase = /[A-Z]/.test(password);
            const hasLowerCase = /[a-z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            
            // Update requirement UI
            requirements.length.className = hasMinLength ? 'requirement valid' : 'requirement';
            requirements.uppercase.className = hasUpperCase ? 'requirement valid' : 'requirement';
            requirements.lowercase.className = hasLowerCase ? 'requirement valid' : 'requirement';
            requirements.number.className = hasNumber ? 'requirement valid' : 'requirement';
            
            return hasMinLength && hasUpperCase && hasLowerCase && hasNumber;
        }
        
        function updatePasswordStrength(password) {
            const strengthDiv = document.getElementById('passwordStrength');
            if (!password) {
                strengthDiv.textContent = '';
                return;
            }
            
            const strength = validatePassword(password);
            strengthDiv.textContent = strength ? '✓ Strong password' : 'Password requirements not met';
            strengthDiv.style.color = strength ? '#4CAF50' : '#f44336';
        }
        
        function checkPasswordsMatch() {
            const matchDiv = document.getElementById('passwordMatch');
            if (!newPassword.value || !confirmPassword.value) {
                matchDiv.textContent = '';
                return false;
            }
            
            const isMatch = newPassword.value === confirmPassword.value;
            matchDiv.textContent = isMatch ? '✓ Passwords match' : '✗ Passwords do not match';
            matchDiv.style.color = isMatch ? '#4CAF50' : '#f44336';
            return isMatch;
        }
        
        function updateSubmitButton() {
            const isValidPassword = validatePassword(newPassword.value);
            const passwordsMatch = checkPasswordsMatch();
            submitBtn.disabled = !(isValidPassword && passwordsMatch);
        }
        
        // Event listeners
        newPassword.addEventListener('input', () => {
            updatePasswordStrength(newPassword.value);
            updateSubmitButton();
        });
        
        confirmPassword.addEventListener('input', updateSubmitButton);
        
        // Form submission validation
        document.getElementById('resetForm').addEventListener('submit', (e) => {
            if (submitBtn.disabled) {
                e.preventDefault();
                alert('Please fix the validation errors before submitting.');
            }
        });
        
        // Initialize
        updateSubmitButton();
    </script>
</body>
</html>